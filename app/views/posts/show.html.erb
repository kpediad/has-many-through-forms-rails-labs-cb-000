<h1><%=@post.title%></h1>
<p><%=@post.content%></p>
<%@post.comments.each do |comment|%>
  <p><%=comment.content%></p>
<%end%>
<ul>
  <%@post.comments.collect{|comment| comment.user.username}.uniq.each do |username|%>
    <li><%=username%></li>
  <%end%>
</ul>
<%= form_for comment do |f| %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.collection_select :user_id, User.all, :id, :name, {include_blank: ''} %>
  <%= f.fields_for :user, comment.user.build do |user_fields| %>
    <%= user_fields.text_field :name %>
    <%= user_fields.text_field :email %>
  <% end %>
  <%= f.submit %>
<% end %>
